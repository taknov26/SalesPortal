<h3>新規登録</h3>

<%= form_with model: @employee, url: employee_registration_path do |f| %>
  <%= render "member/employees/shared/error_messages", resource: resource %>

  <table>
    <tbody>
      <tr>
        <td>名前</td>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <td>名前カナ</td>
        <td><%= f.text_field :name_kana %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= f.text_field :telephone_number %></td>
      </tr>
      <tr>
        <td>内線</td>
        <td><%= f.text_field :phone_extension%></td>
      </tr>
      <tr>
        <td>所属</td>
        <td><%= f.text_field :belonging %></td>
      </tr>
      <tr>
        <td>役職</td>
        <td><%= f.text_field :position %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>
      <tr>
        <td>パスワード(6文字以上)</td>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <td>パスワード確認用</td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>
    </tbody>
  </table>
<%= f.submit "新規作成" %>
<% end %>

<p>登録済みの方は<%= link_to "こちら", new_employee_session_path %></p>
