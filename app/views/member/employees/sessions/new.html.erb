<h3>ログイン</h3>

<%= form_with model: @employee, url: new_employee_session_path, local:true do |f| %>
  <table>
    <tbody>
      <tr>
        <td>メールアドレス</td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>
      <tr>
        <td>パスワード</td>
        <td><%= f.password_field :password, autocomplete: "current-password" %></td>
      </tr>
    </tbody>
  </table>
  <%= f.submit "ログイン" %>
<% end %>

<p>まだ登録していない方は<%= link_to "こちら", new_employee_registration_path %></p>

<p><%= link_to 'ゲストログイン（閲覧用）', employees_guest_sign_in_path, method: :post %></p>